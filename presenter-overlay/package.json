{
  "name": "live-reactions-presenter",
  "version": "1.0.0",
  "description": "Transparent overlay for displaying live audience reactions",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.livereactions.presenter",
    "productName": "Live Reactions",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "keywords": [
    "presentations",
    "reactions",
    "live",
    "overlay"
  ],
  "author": "Rohan Dhanawade",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "pngjs": "^7.0.0"
  },
  "dependencies": {
    "firebase": "^10.7.1"
  }
}
